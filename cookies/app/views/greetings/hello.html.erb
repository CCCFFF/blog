<style type="text/css">
  body {
    font-size: <%= @font %>px;
    color: <%= @color %>;
  }

</style>

<body>
<h1>Hello <%= @name %>!</h1>
<%= link_to "Delete", "/bye", :method => "delete" %>
<%= form_tag "/mynameis", :method => "post" do %>
<%= label_tag :person %>
<%= text_field_tag :person %>

<%= label_tag :color %>
<%= text_field_tag :color %>

<%= label_tag :font %>
<%= text_field_tag :font %>

<%= submit_tag "SAVE" %>
<% end %>
</body>
